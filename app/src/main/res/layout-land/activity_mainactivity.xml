<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".mainactivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        tools:visibility="visible">

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"

            android:width="200dp"
            android:fontFamily="@font/berkshire_swash"
            android:text="  LITTLE   JUNIOR"
            android:textColor="#1A237E"
            android:textColorHighlight="#1A237E"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/berkshire_swash"
            android:shadowColor="#B71C1C"

            android:text="Lessons"
            android:textColor="@color/white"
            android:textColorHighlight="#B71C1C"
            app:backgroundTint="#B71C1C"
            app:strokeColor="#B71C1C" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/berkshire_swash"
            android:shadowColor="#B71C1C"
            android:text=" list Lessons"
            android:textColor="@color/white"
            android:textColorHighlight="#B71C1C"
            android:textSize="15sp"
            app:backgroundTint="#B71C1C"
            android:layout_marginLeft="300dp"
            app:strokeColor="#B71C1C" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/berkshire_swash"
            android:text="Quiz"
            android:textColor="@color/white"
            android:textColorHighlight="#B71C1C"
            app:backgroundTint="#B71C1C"
            android:layout_marginLeft="300dp" />
        <Button
            android:id="@+id/btn1"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/berkshire_swash"
            android:text="Repository"
            app:backgroundTint="#B71C1C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="300dp"/>

        <Button
            android:id="@+id/btn"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/berkshire_swash"
            android:text="Quit"
            app:backgroundTint="#B71C1C"
            android:layout_marginLeft="300dp" />






        <TextView
            android:id="@+id/t2"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="300dp"
            android:layout_marginLeft="300dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="serif"
            android:text="BSEF19M505"
            android:textColor="#1A237E"
            android:textColorHighlight="#1A237E"
            android:textSize="24sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/t3"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:layout_marginStart="300dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="5dp"
            android:fontFamily="serif"
            android:text="HIZA TARIQ"
            android:textColor="#1A237E"
            android:textColorHighlight="#1A237E"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>










